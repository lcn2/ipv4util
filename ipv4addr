# PERFORMANCE OF THIS SOFTWARE.
#
# chongo <was here> /\oo/\
#
# Share and enjoy!

# requirements
#
use strict;
use bytes;

# ip address pattern
#
my $ip_exp = "[0-9]{1,3}[.][0-9]{1,3}[.][0-9]{1,3}[.][0-9]{1,3}";

# Main function
#
MAIN: 
{
    # extract IP address from STDIN
    #
    undef $/;
    while (<>) {
	my @raw_data = grep { $_ =~ /^$ip_exp$/o } split(/[^0-9.]+/, $_);
	print join("\n", @raw_data), "\n" if @raw_data;
    }
}
